{
  "private": true,
  "scripts": {
    "build": "wsrun --exclude-missing --serial -c prepublishOnly"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "bili": "4.8.1",
    "cross-env": "7.0.2",
    "husky": "4.2.5",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "tslint": "6.1.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.4",
    "wsrun": "5.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
