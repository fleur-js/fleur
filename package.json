{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "cross-env": "5.2.0",
        "husky": "2.7.0",
        "lint-staged": "8.2.1",
        "prettier": "1.15.3",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.17.0",
        "typescript": "3.0.1"
    },
    "husky": {
        "hooks": {
          "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "prettier --write",
            "git add"
        ]
    }
}
